@{
    ViewBag.Title = "index";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, user-scalable=no">

    <title>Evaluación desarrollo</title>

    @Styles.Render("~/Content/themes/bootstrap/css/bootstrap.css")
    @Styles.Render("~/Content/Login.css")

</head>
<body class="modal show" id="bodyImagen">
    <section id="login">
        <div class="content">
            <div class="form-wrap">

                <div class="modal-header">
                    <h1 style="color:#fff" class="col-md-12">Evaluación desarrollo</h1>
                    
                </div>

                <form role="form" method="post" id="login-form" autocomplete="off" class="form col-md-12 center-block" action="@Url.Content("~/Acceso/Login")">
                    <div class="form-group" style="padding-top:15px;">
                        <input type="text" name="User" id="usuario" class="form-control" placeholder="CORREO">
                    </div>

                    <div class="form-group">
                        <input type="password" name="Pass" id="contrasena" class="form-control" placeholder="CONTRASEÑA">

                    </div>
                    <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Iniciar Sesión">


                </form>

                <div class="modal-footer" id="footer">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <p style="color:#fff">
                                    Desarrollado por <strong>Luis Carlos Anaya Avalos</strong> © - @DateTime.Today.Year
                                </p>
                            </div>
                            <div id="mensaje" style="color:red; font-size: 17px;">
                                @ViewBag.mensajeerror
                            </div>
                        </div>
                    </div>
                </div>

                <br />

            </div> <!-- /.col-xs-12 -->
        </div> <!-- /.row -->
    </section>
    <!-- script references -->
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
</body>
</html>

